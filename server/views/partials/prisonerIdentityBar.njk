{%- from "moj/components/identity-bar/macro.njk" import mojIdentityBar -%}
{% if model.prisonerDetail %}
    {{ mojIdentityBar({
         title: {
             html: '<span class="govuk-!-margin-right-5"><strong>Prisoner name: </strong>' + model.prisonerDetail.firstName | title + ' ' + model.prisonerDetail.lastName | title + '</span>' +
             '<strong> Date of birth: </strong><span class="govuk-!-margin-right-5">' + model.prisonerDetail.dateOfBirth | date("DD MMMM YYYY")  + '</span>' +
             '<strong>Prison number: </strong>' + model.prisonerDetail.offenderNo
         }
     }) }}
{% endif %}