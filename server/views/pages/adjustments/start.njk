{% extends "../../partials/layout.njk" %}
{% from "govuk/components/date-input/macro.njk" import govukDateInput %}
{% from "govuk/components/select/macro.njk" import govukSelect %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% set pageTitle = applicationName + " - Home" %}
{% set mainClasses = "app-container govuk-body" %}

{% block content %}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <div class="">
                <h1 class="govuk-heading-l">
                            Adjust release dates
                        </h1>
                <p class="govuk-body">
                            Use this service to apply adjustments to a person's record, or review and update existing adjustment information.
                        </p>

                {{ govukButton({
                            text: "Start now",
                            isStartButton: true,
                            type: a,
                            href: "/adjustments/" + model.prisonerDetail.offenderNo + "/list"

                    }) }}
                <h2 class="govuk-heading-m">Before you start</h2>
                <p class="govuk-body">Make sure all of the person's information is up to date on NOMIS before applying remand. This includes:
            <ul class="govuk-list govuk-list--bullet">
                        <li>court cases</li>
                        <li>court dates</li>
                        <li>offences</li>
                        <li>offence dates</li>
                        <li>sentences</li>
                    </ul>
                </p>
            </div>
        </div>
    </div>
{% endblock %}